<p id="notice"><%= notice %></p>

<h1>Room Users</h1>

<table>
  <thead>
    <tr>
      <th>Service</th>
      <th>Room</th>
      <th>User</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_users.each do |room_user| %>
      <tr>
        <td><%= room_user.service_id %></td>
        <td><%= room_user.room_id %></td>
        <td><%= room_user.user_id %></td>
        <td><%= room_user.active %></td>
        <td><%= link_to 'Show', room_user %></td>
        <td><%= link_to 'Edit', edit_room_user_path(room_user) %></td>
        <td><%= link_to 'Destroy', room_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

