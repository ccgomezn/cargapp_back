<p id="notice"><%= notice %></p>

<h1>Payments</h1>

<table>
  <thead>
    <tr>
      <th>Uuid</th>
      <th>Total</th>
      <th>Sub total</th>
      <th>Taxes</th>
      <th>Transaction code</th>
      <th>Observation</th>
      <th>Coupon</th>
      <th>Coupon code</th>
      <th>Coupon amount</th>
      <th>User payment method</th>
      <th>Payment method</th>
      <th>Statu</th>
      <th>Service</th>
      <th>Is service</th>
      <th>User</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.uuid %></td>
        <td><%= payment.total %></td>
        <td><%= payment.sub_total %></td>
        <td><%= payment.taxes %></td>
        <td><%= payment.transaction_code %></td>
        <td><%= payment.observation %></td>
        <td><%= payment.coupon_id %></td>
        <td><%= payment.coupon_code %></td>
        <td><%= payment.coupon_amount %></td>
        <td><%= payment.user_payment_method_id %></td>
        <td><%= payment.payment_method_id %></td>
        <td><%= payment.statu_id %></td>
        <td><%= payment.service_id %></td>
        <td><%= payment.is_service %></td>
        <td><%= payment.user_id %></td>
        <td><%= payment.active %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>
