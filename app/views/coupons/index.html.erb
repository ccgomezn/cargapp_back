<p id="notice"><%= notice %></p>

<h1>Coupons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Description</th>
      <th>Is porcentage</th>
      <th>Value</th>
      <th>Quantity</th>
      <th>Cargapp model</th>
      <th>User</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.name %></td>
        <td><%= coupon.code %></td>
        <td><%= coupon.description %></td>
        <td><%= coupon.is_porcentage %></td>
        <td><%= coupon.value %></td>
        <td><%= coupon.quantity %></td>
        <td><%= coupon.cargapp_model_id %></td>
        <td><%= coupon.user_id %></td>
        <td><%= coupon.active %></td>
        <td><%= link_to 'Show', coupon %></td>
        <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
        <td><%= link_to 'Destroy', coupon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coupon', new_coupon_path %>
