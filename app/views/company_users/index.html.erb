<p id="notice"><%= notice %></p>

<h1>Company Users</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>User</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_users.each do |company_user| %>
      <tr>
        <td><%= company_user.company_id %></td>
        <td><%= company_user.user_id %></td>
        <td><%= company_user.active %></td>
        <td><%= link_to 'Show', company_user %></td>
        <td><%= link_to 'Edit', edit_company_user_path(company_user) %></td>
        <td><%= link_to 'Destroy', company_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

