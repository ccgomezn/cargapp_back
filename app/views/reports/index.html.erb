<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Cause</th>
      <th>Sense</th>
      <th>Novelty</th>
      <th>Geolocation</th>
      <th>Image</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Report type</th>
      <th>User</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.name %></td>
        <td><%= report.origin %></td>
        <td><%= report.destination %></td>
        <td><%= report.cause %></td>
        <td><%= report.sense %></td>
        <td><%= report.novelty %></td>
        <td><%= report.geolocation %></td>
        <td><%= report.image %></td>
        <td><%= report.start_date %></td>
        <td><%= report.end_date %></td>
        <td><%= report.report_type %></td>
        <td><%= report.user_id %></td>
        <td><%= report.active %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

